  caso  5 :
    pote_farinha ( quant1 ) ;
    quebrar ;
  caso  6 :
    pote_cafe ( quant1 ) ;
    quebrar ;
  caso  7 :
    pote_batapalha ( quant1 ) ;
    quebrar ;
  padrão :
    text  =  "Nenhum valor encontrado" ;
}

função  pote_feijão ( quant1 ) 
{

	if  ( poteFeijao  <  CAP_POTEFEIJAO ) 
	{
		deixa  sobrando = 0 ;
		//encher o pote de feijão
		poteFeijao = poteFeijao + quant1 ;
		sobrando  =  CAP_POTEFEIJAO - poteFeijao ;
		voltar  sobrando ;
	}
	outro
	{
		deixa  sobrando = 0 ;
		prompt ( "O pote já está cheio" )
		retornar 
	}
  
  retornar  p1  *  p2 ;
}
função  pote_arroz ( quant1 ) 
{
  retornar  p1  *  p2 ;
}
function  pote_acucar ( quant1 ) 
{
  retornar  p1  *  p2 ;
}

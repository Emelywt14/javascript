<script> _ _
/*
próxima aula falar de booleano e laço for ...
feijão = 1kg
arroz = 5kg
açucar = 5kg
macarrao = 500grs
farinha = 250 grs
café = 500 grs
batata_palha = 1,5kg
*/

// as unidades consideradas serao em gramas

// pois vamos usar inteiros para declarar nossas constantes
const  CAP_POTEFEIJAO = 1000 ,  CAP_POTEARROZ = 5000 ,  CAP_POTEACUCAR = 5000 ,  CAP_POTEMACARRAO = 500 ,  CAP_POTEFARINHA = 250 , CAP_POTECAFE = 500 ,  CAP_BATPALHA = 1500 ; 



var  quant1 = 0 ,  poteFeijao = 0 ,  poteArroz = 0 ,  poteAcucar = 0 ,  poteMacarrao = 0 , poteFarinha = 0 ,  poteCafe = 0 ,  poteBatatapalha = 0 ;


let  opcao = prompt (  "digite: \n 1 - feijao\n 2 - arroz \n 3 - acucar \n 4 - macarrao \n 5 - farinha \n 6- cafe \n 7 - batata_palha \n " ) ;
//meu opcao esta valendo o que eu digito
quant1 = prompt ( "Qual a quantidade de mantimento?" ) ;
switch  ( opção ) 
{
  caso  1 :
    pote_feijao ( quant1 ) ;
    quebrar ;
  caso  2 :
    pote_arroz ( quant1 ) ;
    quebrar ;
  caso  3 :
	pote_acucar ( quant1 ) ;
    quebrar ;
  caso  4 :
    pote_macarrao ( quant1 ) ;
